<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="12dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inci_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="2nd S.S. Market Complex Ward,  No 6, Hill Cart Rd"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/clock_icon"
                app:layout_constraintTop_toBottomOf="@id/address"
                android:layout_marginTop="40dp"
                android:src="@drawable/akar_icons_clock"
                app:layout_constraintStart_toStartOf="@id/address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inci_time"
                android:text="07:20"
                android:textSize="20sp"
                android:fontFamily="@font/revalia"
                android:textColor="@color/green"
                app:layout_constraintStart_toEndOf="@+id/clock_icon"
                app:layout_constraintTop_toTopOf="@id/clock_icon"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@id/clock_icon"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/crash_icon"
                app:layout_constraintTop_toBottomOf="@id/clock_icon"
                app:layout_constraintStart_toStartOf="@id/address"
                android:src="@drawable/tabler_car_crash"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gforce"
                android:text="28.7 G"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:fontFamily="@font/revalia"
                android:layout_marginLeft="9dp"
                app:layout_constraintStart_toEndOf="@id/crash_icon"
                app:layout_constraintTop_toTopOf="@id/crash_icon"
                app:layout_constraintBottom_toBottomOf="@id/crash_icon" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:src="@drawable/fontisto_map_marker_alt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>